@using UniversidadQ10.Web.ViewModels
@model SubjectCreateViewModel
<div class="w-50 p-3 container text-center border border-3">
    <h2>Registro Materia</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Credit"></label>
            <input asp-for="Credit" class="form-control" />
            <span asp-validation-for="Credit" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary m-4">Registrar</button>
    </form>
</div>
